{% extends 'base.html.twig' %}

{% block title %}Restaurants index{% endblock %}

{% block body %}
    <h1>Restaurants index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Adresse</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Chef</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurant in restaurants %}
            <tr>
                <td>{{ restaurant.id }}</td>
                <td>{{ restaurant.nom }}</td>
                <td>{{ restaurant.description }}</td>
                <td>{{ restaurant.adresse }}</td>
                <td>{{ restaurant.latitude }}</td>
                <td>{{ restaurant.longitude }}</td>
                <td>{{ restaurant.chef }}</td>
                <td>
                    <a href="{{ path('app_restaurants_show', {'id': restaurant.id}) }}">show</a>
                    <a href="{{ path('app_restaurants_edit', {'id': restaurant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_restaurants_new') }}">Create new</a>
{% endblock %}
